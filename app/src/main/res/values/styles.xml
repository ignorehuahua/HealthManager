<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/toolbar</item>
        <item name="colorAccent">@color/toolbar</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="main_page_guide_font">
        <item name="android:textColor">@color/name_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="member_info_label_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/name_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="member_info_value_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/shape_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="add_data_et">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/shape_add_data</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="measure_state_radio_btn">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="tab_layout">
        <item name="tabIndicatorColor">@color/toolbar</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextColor">@color/shape_gray</item>
        <item name="tabSelectedTextColor">@color/toolbar</item>
    </style>

    <style name="input_et">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="data_label_font">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/name_color</item>
    </style>

    <style name="data_value_font">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/data_value</item>
    </style>

</resources>
