<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/blood_pressure"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tv_warn_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/name_color"
                android:textSize="14sp"
                android:layout_toRightOf="@id/iv_type"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tv_warn_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/iv_type"
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_warn_info_explanation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_warn_info"
                android:textColor="@color/name_color"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_value_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/name_color"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/tv_warn_info_explanation"/>

            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_value_label"
                android:layout_below="@id/tv_warn_info_explanation"
                android:textColor="@color/name_color"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tv_measure_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_value"
                android:textColor="@color/name_color"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:text="@string/measure_time" />

            <TextView
                android:id="@+id/tv_measure_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_measure_time_label"
                android:layout_below="@id/tv_value"
                android:textColor="@color/name_color"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>